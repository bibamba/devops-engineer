[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User={{ prometheus_user }}
Group={{ prometheus_group }}
Type=simple
ExecStart={{ prometheus_install_dir }}/prometheus --config.file={{ prometheus_config_file }} --storage.tsdb.path={{ prometheus_data_dir }} --web.listen-address=:{{ prometheus_port }}

[Install]
WantedBy=multi-user.target